#!/bin/bash

NAME=$(basename "$(pwd)")
FROM=andrewmackrodt/$(basename "$(pwd)")

getVersion() {
    docker run -i --rm --user root --entrypoint=/bin/sh "$FROM" <<'EOF'
        apt-get update -qq
        apt-cache show php7.3 | grep Version | head -n1 | awk '{ print $2 }'
EOF
}

RELEASE_VERSION=$( \
    getVersion \
      | sed -E 's/^([0-9]+:)?([0-9]+\.[0-9]+(\.[0-9]+)?)(-([0-9]+))?.*/\2-r\5/' \
      | sed -E 's/-r$//' \
  )

PHP_VERSION=$(echo "$RELEASE_VERSION" | sed -E "s/^([0-9]+\.[0-9]+).*/\1/")

release() {
    echo "release=$RELEASE_VERSION"
    echo "tag=$NAME-$RELEASE_VERSION"
}

env() {
    echo "PHP_VERSION=$PHP_VERSION"
    echo "RELEASE_VERSION=$RELEASE_VERSION"
}

configure () {
    release > .release
    env > .release.env
}
