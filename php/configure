#!/bin/bash

FROM=andrewmackrodt/$(basename "$(pwd)")

getLatestVersions() {
    docker run -i --rm \
        --user root \
        --entrypoint=/bin/sh \
        -e "versions=$(yq r build.yml build.versions[*] | sed -E 's/^ *- |"//g')" \
        "$FROM" <<'EOF'
            apt-get update -qq
            for v in $versions; do
                echo -n "$v:"
                apt-cache show "php${v}" \
                    | grep Version \
                    | head -n1 \
                    | awk '{ print $2 }' \
                    | sed -E 's/^([0-9]+:)?([0-9]+\.[0-9]+(\.[0-9]+)?)(-([0-9]+))?.*/\2-r\5/' \
                    | sed -E 's/-r$//'
            done
EOF
}

for v in $(getLatestVersions); do
    php_version=$(echo "$v" | cut -f1 -d':')
    version=$(echo "$v" | cut -f2 -d':')

    {
      echo "PHP_VERSION=$php_version"
      echo "VERSION=$version"
    } \
      > "build${php_version}.properties"
done
