#!/bin/bash

NAME=$(basename "$(pwd)")
FROM=andrewmackrodt/$NAME

getVersion() {
    docker run -i --rm --user root --entrypoint=/bin/sh "$FROM" <<'EOF'
        apt-get update -qq
        apt-cache show spotify-client | grep Version | head -n1 | awk '{ print $2 }'
EOF
}

SPOTIFY_VERSION=$(getVersion)
RELEASE_VERSION=$(echo "$SPOTIFY_VERSION" | sed -E 's/^([0-9]+:)?([0-9]+\.[0-9]+\.[0-9]+).*/\2/')

release() {
    echo "release=$RELEASE_VERSION"
    echo "tag=$NAME-$RELEASE_VERSION"
}

env() {
    echo "SPOTIFY_VERSION=$SPOTIFY_VERSION"
    echo "RELEASE_VERSION=$RELEASE_VERSION"
}

configure () {
    release > .release
    env > .release.env
}
